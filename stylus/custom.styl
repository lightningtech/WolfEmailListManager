/****************
	LOGIN PAGE
*****************/
.loginscreen 
	.btn-signup
		border: 1px solid #d4d4d4
	.img-responsive
		width 80%

.btn-facebook 
	background-color: #3b5998 !important
	border-color: #2f477b !important
	border-radius 0px

.btn-facebook:hover 
	background-color: #2f477b !important
	border-color: #263963 !important

.btn-twitter 
	background-color: #00aced !important
	border-color: #0098d1 !important
	border-radius 0px

.btn-twitter:hover 
	background-color: #0098d1 !important
	border-color: #0283b4 !important

.btn-signup,.or
	font-weight: 400
	letter-spacing: 1px
	text-transform: uppercase
	color: rgba(0, 0, 0, 0.8)
.or
	font-size 11px
	text-align: center
	margin: 20px 0
	position: relative
	&:after 
		content: ''
		position: absolute
		width: 32%
		height: 1px
		background-color: rgba(0, 0, 0, 0.2)
		top: 8px
		right: 0
	&:before
		content: ''
		position: absolute
		width: 32%
		height: 1px
		background-color: rgba(0, 0, 0, 0.2)
		top: 8px
		left: 0
@media (min-width: 768px) 
	.table-chosen
		overflow-x inherit
.btn-sh-none
	box-shadow none !important