/************** 
	FORM STYLE
***************/
.table .form-inline .form-control
	width 100%
.form-group 
	>label
		font-size: 13px
		color: #454545
		font-weight: 600
		margin-bottom: 0px
		text-transform: uppercase
		line-height: 30px
		padding: 0px
.form-title-section
	position: relative
	margin: 15px 0 30px 0
	&:before
		content: ''
		position: absolute
		width: 100%
		height: 0
		border-top: 3px double #E5E5E5
		left: auto
		top: 46%
		right: 0
	> h1,> h2,> h3,> h4,> h5,> h6
		position: relative
		display: inline-block
		background-color: #FFF
		padding-right: 15px
		margin-bottom: 0
		text-transform uppercase
		> span
			color navy
			font-weight 400
	>h3
		font-size 1.4em
input[type="checkbox"], input[type="radio"] 
	cursor pointer
// plugin checkbox and radio
.table .checkbox
	input[type="checkbox"], input[type="radio"] 
		top 3px
		right 1px
		width 15px
		height 15px
.input-group-addon
	> .checkbox,
	> .radio
		margin 2px 1px 0 8px
		input[type="checkbox"]
			right: 9px
			top: 2px
			width: 14px
	> .checkbox label::after
		left: -1px
		top: 2px
// upload input file style
.btn-success-file
	visibility: hidden
	width: 0
	position: relative
	color: #fff
.btn-success-file::before 
	content: 'UPLOAD FILE'
	display: inline-block
	background: #1abc9c
	border-radius: 0px
	padding: 5px 8px
	outline: none
	white-space: nowrap
	-webkit-user-select: none
	cursor: pointer
	color: #fff
	font-size: 10pt
	visibility: visible
	position: absolute
	margin: 0 auto
.btn-success-file:hover::before 
	background-color: darken(green, 3%)
	border-color: darken(green, 3%)
	color: #FFFFFF
.btn-success-file:active::before 
	background-color: darken(green, 3%)
	border-color: darken(green, 3%)
	color: #FFFFFF

