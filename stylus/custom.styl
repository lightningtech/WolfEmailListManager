.or
	font-size 11px
	text-align: center
	margin: 20px 0
	position: relative
	&:after 
		content: ''
		position: absolute
		width: 32%
		height: 1px
		background-color: rgba(0, 0, 0, 0.2)
		top: 8px
		right: 0
	&:before
		content: ''
		position: absolute
		width: 32%
		height: 1px
		background-color: rgba(0, 0, 0, 0.2)
		top: 8px
		left: 0
