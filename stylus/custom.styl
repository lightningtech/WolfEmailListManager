/********************
	TOP NAVIGATION
*********************/
.minimalize-styl-2,.minimalize-styl-2:hover,.minimalize-styl-2:focus
	background lighten(navy, 12%)
	color #fff
.navy-bg
	>.nav.navbar-right > li > a
		color: #ffffff
	.navbar-form-custom .form-control
		border-top: 0px solid #ccc
		border-left: 0px solid #ccc
		border-right: 0px solid #ccc
		background: rgba(255, 255, 255, 0.4)
		border-bottom: 0px solid #ccc
		border-radius: 25px
		padding: 0 0 0 45px
		display: inline-block
		vertical-align: middle
		height: 34px
		margin 7px 0 0 0
	::-webkit-input-placeholder
		color #eee
	.navbar-form-custom:before
		content: "\f002"
		position: absolute
		font-family: 'FontAwesome'
		font-style: normal
		font-weight: normal
		speak: none
		display: block
		height: 30px
		width: 30px
		text-align: center
		line-height: 30px
		top: 9px
		right: 168px
		color: #B7C1D3
		background: #ffffff
		border-radius: 50%
.navbar-top-links .open>a, .navbar-top-links .open>a:focus, .navbar-top-links .open>a:hover
	background darken(navy, 3%)
.navbar-top-links .dropdown-menu li a 
	color #666
// dropdown-user
.navbar
	li.dropdown-user .dropdown-toggle 
		padding: 14px 6px 12px 8px
	li.dropdown-user .dropdown-toggle > .username 
		display: inline-block
		font-size: 13px
	li.dropdown-user .dropdown-toggle > img 
		float: left
		margin-top: -5px
		margin-right: 5px
		height: 29px
		display: inline-block
	li.dropdown-user .dropdown-toggle > i 
		display: inline-block
		margin-top: 5px
		margin: 0
		font-size: 13px
	li.dropdown-user .dropdown-menu 
		width: 175px
	li.dropdown-user .dropdown-menu > li > a 
		font-size: 14px
	li.dropdown-user .dropdown-menu > li > a i 
		width: 15px
		display: inline-block
		margin-right: 9px
	li.dropdown-user .dropdown-menu > li > a .badge 
		margin-right: 10px
