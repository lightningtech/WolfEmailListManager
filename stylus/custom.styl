	border-bottom solid 1px #eeeeee
	box-shadow: inset 0px 0px 94px 2px rgba(168,168,168,0.1);
.navbar-default .nav .open > a,.navbar-default .nav .open > a:hover,.navbar-default .nav .open > a:focus 
	background: #fff
body.mini-navbar .logo-big
	display none
.logo-big img
	width 85%
	margin 0 auto
	display block
/************** 
	BODY STYLE
***************/
.module-icon
	border-right solid 1px #eee
	height 45px
	i.fa
		font-size 1.5em
		margin-top 10px
#page-wrapper
	border-left solid 1px #ddd
/* inbox panel */
.ibox-title
	background navy
	h1,h2,h3,h4,h5,small,p,.ibox-tools a
		color #fff
/* form style*/	
.table .form-inline .form-control
	width 100%
.form-group 
	>label
		font-size: 13px
		color: #454545
		font-weight: 600
		margin-bottom: 0px
		text-transform: uppercase
		line-height: 30px
		padding: 0px
.form-title-section
	position: relative
	margin: 15px 0 30px 0
	&:before
		content: ''
		position: absolute
		width: 100%
		height: 0
		border-top: 3px double #E5E5E5
		left: auto
		top: 46%
		right: 0
	> h1,> h2,> h3,> h4,> h5,> h6
		position: relative
		display: inline-block
		background-color: #FFF
		padding-right: 15px
		margin-bottom: 0
		text-transform uppercase
		> span
			color navy
			font-weight 400
	>h3
		font-size 1.4em
.checkbox
	-ms-transform: scale(1.3); /* IE 9 */
	-webkit-transform: scale(1.3); /* Safari */
	transform: scale(1.3);
	input[type="checkbox"], input[type="radio"] 
		cursor pointer
.input-group-addon
	>.checkbox
		margin 2px 1px 0 8px	
		label::after
			top 2px !important
			left -1px !important
/* table style */
.table-responsive .row,.table-responsive .row > div,.table-toolbar .row,.table-toolbar .row > div
	padding 0
	margin 0
.table-toolbar
	margin-bottom 10px
/* Align table elements that containing text with button or fields*/
.center-datatable tr 
	td,th
		vertical-align: middle !important
		text-align center
table 
  .table-link 
    font-weight: 600
    color: inherit
      &:hover 
        color: inherit
  .table-avatar 
    width: 42px
    img 
      width: 38px
      height: 38px
      border-radius: 50%
